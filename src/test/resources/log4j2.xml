<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <!--Console logs-->
        <Console name ="Console"
                 target ="SYSTEM_OUT">
            <PatternLayout pattern = "%d{HH:mm:ss} [%t] %-5level %c - %msg%n"/>
        </Console>

        <!--File logs-->
        <File name ="FileLogger"
              fileName ="logs/automation.log">
            <PatternLayout pattern = "%d{yyyy-MM-dd HH:mm:ss} %-5level %c - %msg%n"/>
        </File>
    </Appenders>

    <Loggers>
        <Root level ="info">
            <AppenderRef ref = "Console"/> <!--from line 5-->
            <AppenderRef ref = "FileLogger"/> <!--from line 11-->
        </Root>
    </Loggers>
</Configuration>